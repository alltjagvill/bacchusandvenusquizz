<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1f1ea">

    <Button
        android:id="@+id/miscbutton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="111dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_corner"
        android:onClick="startMisc"
        android:text="@string/misc"
        android:textSize="30sp" />

    <Button
        android:id="@+id/memesbutton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="111dp"
        android:layout_toRightOf="@id/miscbutton"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_corner"
        android:onClick="startMemes"
        android:text="@string/memes"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sexbutton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alcoholbutton"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:layout_toRightOf="@id/alcoholbutton"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_corner"
        android:onClick="startSex"
        android:text="@string/sex"
        android:textSize="30sp" />

    <Button
        android:id="@+id/alcoholbutton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_corner"
        android:onClick="startAlcohol"
        android:text="@string/alcohol"
        android:textSize="30sp" />



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:text="@string/categories"
        android:textSize="40sp" />


    <ImageView
        android:id="@+id/seximage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sexbutton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="0dp"

        app:srcCompat="@drawable/sex" />

    <ImageView
        android:id="@+id/truckimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/miscbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginBottom="-4dp"
        app:srcCompat="@drawable/truck" />

    <ImageView
        android:id="@+id/memesimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/memesbutton"
        android:layout_alignEnd="@+id/title"
        android:layout_marginEnd="-23dp"
        android:layout_marginBottom="-4dp"
        app:srcCompat="@drawable/memes" />

    <ImageView
        android:id="@+id/alcoholimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sexbutton"
        android:layout_alignStart="@+id/title"
        android:layout_marginStart="-24dp"
        android:layout_marginBottom="2dp"
        app:srcCompat="@drawable/grail" />

    <EditText
        android:id="@+id/teamName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="#31bff2"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="@string/nameHint" />

</RelativeLayout>